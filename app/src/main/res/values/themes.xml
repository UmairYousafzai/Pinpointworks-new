<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PinpointworksNew" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <!-- Your main application theme -->
    <style name="Theme.YourAppName" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Customize your main theme as needed -->
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="android:forceDarkAllowed">false</item>

        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/Onyx</item>

        <!--
                 Use windowSplashScreenAnimatedIcon to add either a drawable or an
                 animated drawable.
        -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
         <item name="windowSplashScreenAnimationDuration">1000</item>
        <!-- Optional: animation duration -->


        <!-- Set the theme of the Activity that follows your splash screen. -->
        <!-- This is important for a smooth transition. -->
        <item name="postSplashScreenTheme">@style/Theme.PinpointworksNew</item>
    </style>

</resources>